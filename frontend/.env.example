# TaskMate Frontend - Environment Configuration

# =================================
# API Configuration
# =================================
# Backend API base URL
# Development: proxied via Vite (see vite.config.js)
# Production: full URL to deployed backend
VITE_API_BASE_URL=/api

# =================================
# Feature Flags
# =================================
# Enable debug mode
VITE_DEBUG=false

# Show ML confidence scores in UI
VITE_SHOW_ML_SCORES=true

# =================================
# App Configuration
# =================================
# Application title
VITE_APP_TITLE=TaskMate

# Default tasks per page
VITE_TASKS_PER_PAGE=20
