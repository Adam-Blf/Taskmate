# TaskMate ML Service - Environment Configuration

# =================================
# Model Configuration
# =================================
# Path to trained model file (relative to ml/ directory)
MODEL_PATH=model.pkl

# Minimum confidence threshold for predictions (0.0-1.0)
MIN_CONFIDENCE=0.5

# =================================
# Training Configuration
# =================================
# Random seed for reproducibility
RANDOM_SEED=42

# Test split ratio (0.0-1.0)
TEST_SIZE=0.2

# =================================
# Logging
# =================================
# Enable verbose logging
DEBUG=false
